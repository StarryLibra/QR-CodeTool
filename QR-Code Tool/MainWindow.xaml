<Window x:Class="QRCodeTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="二维码工具" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="App.ico">
    <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Grid.Column="2" Height="424" Width="790" Margin="0,0,0,-3">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock HorizontalAlignment="Left" Margin="10,30,0,0" TextWrapping="Wrap" Text="内容" VerticalAlignment="Top"/>
        <TextBox x:Name="txtMessage" HorizontalAlignment="Left" Height="107" Margin="48,31,0,0" Padding="3,3,3,3" TextWrapping="Wrap" VerticalAlignment="Top" Width="441">
            <TextBox.Resources>
                <VisualBrush x:Key="HelpBrush" TileMode="None" Opacity="0.3" Stretch="None" AlignmentX="Center" AlignmentY="Center">
                    <VisualBrush.Visual>
                        <TextBlock Text="请输入生成二维码的字符串"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </TextBox.Resources>
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Style.Triggers>
                        <Trigger Property="Text" Value="{x:Null}">
                            <Setter Property="Background" Value="{StaticResource HelpBrush}"/>
                        </Trigger>
                        <Trigger Property="Text" Value="">
                            <Setter Property="Background" Value="{StaticResource HelpBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBox.Style>
        </TextBox>
        <TextBlock HorizontalAlignment="Left" Margin="10,154,0,0" TextWrapping="Wrap" Text="容量" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="48,154,0,0" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>
        <Button x:Name="btnGen" Content="生成" HorizontalAlignment="Left" Margin="405,371,0,0" VerticalAlignment="Top" Width="75" Height="28" Click="btnGen_Click"/>

        <StackPanel Background="#FFFFFFE1" Grid.Column="1">
            <TextBlock HorizontalAlignment="Left" Margin="20,30,0,0" TextWrapping="Wrap" Text="二维码图" VerticalAlignment="Top"/>
            <Border Background="White" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="176" Margin="45,24,0,0" VerticalAlignment="Top" Width="176">
                <Image x:Name="imgQrcode" HorizontalAlignment="Left" Height="175" VerticalAlignment="Top" Width="175"/>
            </Border>
            <Button x:Name="btnSave" Content="保存" HorizontalAlignment="Left" Margin="96,28,0,0" VerticalAlignment="Top" Width="75" Height="28" Click="btnSave_Click"/>
            <Button x:Name="btnPrint" Content="打印" HorizontalAlignment="Left" Margin="96,16,0,0" VerticalAlignment="Top" Width="75" Height="28" Click="btnPrint_Click"/>
        </StackPanel>
    </Grid>
</Window>
